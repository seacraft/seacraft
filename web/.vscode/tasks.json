  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm:watch-web",
      "command": "pnpm",
      "type": "shell",
      "args": [
        "run",
        "watch-web"
      ],
      "problemMatcher": [
        "$tsc",
        "$node-sass"
      ]
    },
    {
      "label": "pnpm:build-web",
      "command": "pnpm",
      "type": "shell",
      "args": [
        "run",
        "build-web"
      ],
      "problemMatcher": [
        "$tsc",
        "$node-sass"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
